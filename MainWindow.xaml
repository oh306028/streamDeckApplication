<Window x:Class="StreamDeckConfigurator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StreamDeckConfigurator"
        mc:Ignorable="d"
        Title="Stream Deck Configurator" Height="500" Width="900"
        Background="{StaticResource PrimaryBackgroundBrush}"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="0" Background="{StaticResource SecondaryBackgroundBrush}" Width="380">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Button Grid.Row="0" Content="⚙️" FontSize="24" HorizontalAlignment="Left" 
                    Style="{StaticResource IconButtonStyle}" ToolTip="Settings (Future Feature)"/>

            <ItemsControl Grid.Row="1" ItemsSource="{Binding Pads}" VerticalAlignment="Center" HorizontalAlignment="Center">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Rows="2" Columns="3" Width="330" Height="220"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Button Command="{Binding DataContext.SelectPadCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                CommandParameter="{Binding}" Height="100" Width="100">
                            <StackPanel>
                                <TextBlock Text="{Binding Icon}" FontSize="36" HorizontalAlignment="Center"/>
                                <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Button>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>

            <Border Grid.Row="2" BorderBrush="{StaticResource AccentBrush}" BorderThickness="0,1,0,0" Padding="10">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="Status: " Foreground="Gray"/>
                    <TextBlock Text="{Binding ConnectionStatus}" Foreground="LightGreen" FontWeight="Bold"/>
                </StackPanel>
            </Border>
        </Grid>

        <Grid Grid.Column="1">
            <TextBlock Text="V 1.0.1"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Margin="0,10,15,0"
                       Foreground="Gray" />

            <Border Padding="25" Margin="10" DataContext="{Binding SelectedPad}">
                <StackPanel>
                    <TextBlock Text="Konfiguracja przycisku" FontSize="22" FontWeight="Bold" Foreground="{StaticResource TextBrush}" Margin="0,0,0,20"/>

                    <TextBlock Text="Nazwa" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                    <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Padding="5" Background="#3E3E42" Foreground="White" BorderThickness="1" BorderBrush="#555"/>

                    <TextBlock Text="Akcja" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding DataContext.Actions, RelativeSource={RelativeSource AncestorType=Window} }" 
          SelectedItem="{Binding Action}" Margin="0,0,0,15" Padding="5"/>

                    <TextBlock Text="Styl" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding DataContext.Styles, RelativeSource={RelativeSource AncestorType=Window}}" 
                              SelectedItem="{Binding Style}" Margin="0,0,0,15" Padding="5"/>

                    <TextBlock Text="Ikonka" Foreground="{StaticResource TextBrush}" Margin="0,0,0,5"/>
                    <ComboBox ItemsSource="{Binding DataContext.Icons, RelativeSource={RelativeSource AncestorType=Window}}" 
SelectedItem="{Binding Icon}" Margin="0,0,0,15" Padding="5"/>

                    <Button Content="Zapisz"
        Command="{Binding DataContext.SendToDeckCommand, RelativeSource={RelativeSource AncestorType=Window}}"
        Background="{StaticResource AccentBrush}"
        Foreground="White"
        FontWeight="Bold"
        Margin="0,20,0,0"
        Padding="10,5"/>

                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>